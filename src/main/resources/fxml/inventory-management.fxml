<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aidsync.controller.InventoryController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
         <children>
            <Label styleClass="page-title" text="Inventory Management">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" onAction="#handleBack" styleClass="back-button" text="â† Back to Dashboard" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" styleClass="main-split">
         <items>
            <!-- Left: Inventory List -->
            <VBox spacing="10.0">
               <children>
                  <!-- Search and Filters -->
                  <HBox spacing="10.0" styleClass="search-bar">
                     <children>
                        <TextField fx:id="searchField" promptText="Search by name or code..." HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="categoryFilter" promptText="All Categories" />
                        <ComboBox fx:id="statusFilter" promptText="All Status" />
                     </children>
                  </HBox>
                  
                  <!-- Inventory Table -->
                  <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="codeColumn" prefWidth="100.0" text="Code" />
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Item Name" />
                        <TableColumn fx:id="categoryColumn" prefWidth="120.0" text="Category" />
                        <TableColumn fx:id="stockColumn" prefWidth="80.0" text="Stock" />
                        <TableColumn fx:id="unitColumn" prefWidth="60.0" text="Unit" />
                        <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
                        <TableColumn fx:id="valueColumn" prefWidth="100.0" text="Value" />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Right: Item Form -->
            <ScrollPane fitToWidth="true" styleClass="form-panel">
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <Label styleClass="form-title" text="Item Information">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <!-- Basic Information -->
                        <VBox spacing="10.0" styleClass="form-section">
                           <children>
                              <Label styleClass="section-header" text="Basic Information" />
                              
                              <GridPane hgap="10.0" vgap="8.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 </columnConstraints>
                                 <children>
                                    <Label text="Item Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <TextField fx:id="itemCodeField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Item Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextField fx:id="itemNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Unit of Measure:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <TextField fx:id="unitOfMeasureField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    
                                    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <ComboBox fx:id="itemStatusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                        
                        <!-- Stock Information -->
                        <VBox spacing="10.0" styleClass="form-section">
                           <children>
                              <Label styleClass="section-header" text="Stock Information" />
                              
                              <GridPane hgap="10.0" vgap="8.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 </columnConstraints>
                                 <children>
                                    <Label text="Current Stock:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <TextField fx:id="currentStockField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Minimum Level:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextField fx:id="minimumStockField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Maximum Level:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <TextField fx:id="maximumStockField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Unit Cost:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <TextField fx:id="unitCostField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                        
                        <!-- Supplier Information -->
                        <VBox spacing="10.0" styleClass="form-section">
                           <children>
                              <Label styleClass="section-header" text="Supplier & Batch Information" />
                              
                              <GridPane hgap="10.0" vgap="8.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 </columnConstraints>
                                 <children>
                                    <Label text="Supplier:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <ComboBox fx:id="supplierComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Batch Number:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextField fx:id="batchNumberField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    
                                    <Label text="Manufacture Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <DatePicker fx:id="manufactureDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    
                                    <Label text="Expiration Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <DatePicker fx:id="expirationDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                        
                        <!-- Storage Information -->
                        <VBox spacing="10.0" styleClass="form-section">
                           <children>
                              <Label styleClass="section-header" text="Storage Information" />
                              
                              <GridPane hgap="10.0" vgap="8.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                 </columnConstraints>
                                 <children>
                                    <Label text="Storage Location:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <TextField fx:id="storageLocationField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    
                                    <Label text="Storage Conditions:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextArea fx:id="storageConditionsArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 </children>
                              </GridPane>
                           </children>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <HBox spacing="10.0" styleClass="button-bar">
                           <children>
                              <Button fx:id="saveButton" onAction="#handleSave" styleClass="save-button" text="Save" />
                              <Button fx:id="clearButton" onAction="#handleClear" styleClass="clear-button" text="Clear" />
                              <Button fx:id="deleteButton" onAction="#handleDelete" styleClass="delete-button" text="Delete" />
                              <Button fx:id="adjustStockButton" onAction="#handleAdjustStock" styleClass="adjust-button" text="Adjust Stock" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>