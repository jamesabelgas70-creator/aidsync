<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aidsync.controller.RegisterController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="title" text="Create Account">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <VBox spacing="15.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" promptText="Enter username (3-20 characters)" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Email:" />
                  <TextField fx:id="emailField" promptText="Enter email address" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Full Name:" />
                  <TextField fx:id="fullNameField" promptText="Enter your full name" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" promptText="8+ chars, uppercase, lowercase, number" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Confirm Password:" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" />
               </children>
            </VBox>
            
            <VBox spacing="5.0">
               <children>
                  <Label text="Role:" />
                  <ComboBox fx:id="roleComboBox" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
            
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="registerButton" onAction="#handleRegister" styleClass="primary-button" text="Create Account" HBox.hgrow="ALWAYS" />
                  <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" text="Back to Login" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>